<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="TextFields,HardcodedText" >

    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Not Connected:"
        android:layout_toLeftOf="@+id/fastestButton"
        android:layout_toStartOf="@+id/fastestButton" />

    <Button
        android:id="@+id/find"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/label"
        android:text="Find"
        android:layout_height="40dp"
        android:onClick="findDevice" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Connect"
        android:layout_below="@id/label"
        android:layout_toRightOf="@+id/find"
        android:layout_toEndOf="@+id/find"
        android:onClick="connectDevice" />

    <RadioButton
        android:text="500 Hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fastestButton"
        android:layout_toEndOf="@+id/fastestButton"
        android:id="@+id/slowButton"
        android:checked="true"
        android:onClick="sendData"
        android:textSize="14sp" />

    <RadioButton
        android:text="2 kHz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fastestButton"
        android:checked="false"
        android:onClick="sendData"
        android:layout_toRightOf="@+id/connectButton"
        android:textSize="14sp"
        android:layout_alignParentTop="true" />

    <RadioButton
        android:text="250 Hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slowestButton"
        android:onClick="sendData"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/fastButton"
        android:layout_alignBottom="@+id/fastButton"
        android:layout_toRightOf="@+id/fastestButton"
        android:layout_toEndOf="@+id/fastestButton" />

    <Switch
        android:layout_height="wrap_content"
        android:id="@+id/recordSwitch"
        android:layout_width="wrap_content"
        android:checked="false"
        android:layout_below="@+id/find"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp" />

    <RadioButton
        android:text="1 kHz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fastButton"
        android:onClick="sendData"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/connectButton"
        android:layout_toRightOf="@+id/connectButton"
        android:layout_toEndOf="@+id/connectButton" />

    <com.androidplot.xy.XYPlot
        style="@style/APDefacto.Light"
        android:id="@+id/dynamicXYPlot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordSwitch"
        app:renderMode="use_background_thread"
        app:title="A Dynamic XY Plot"
        app:domainTitle="Domain"
        app:rangeTitle="Range"
        app:legendTextSize="15sp"
        app:legendIconHeight="15dp"
        app:legendIconWidth="15dp"
        app:legendHeight="25dp"
        app:legendAnchor="right_bottom"/>

    <TextView
        android:text="@string/record_button_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="22sp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_above="@+id/dynamicXYPlot"
        android:layout_toRightOf="@+id/recordSwitch"
        android:layout_toEndOf="@+id/recordSwitch" />

    <Button
        android:text="Show"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/slowestButton"
        android:layout_toRightOf="@+id/connectButton"
        android:layout_toEndOf="@+id/connectButton"
        android:id="@+id/showButton"
        android:onClick="listenForData" />

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/slowestButton"
        android:layout_toRightOf="@+id/showButton"
        android:layout_toEndOf="@+id/showButton"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/closeButton"
        android:onClick="closeConnection" />

</RelativeLayout>