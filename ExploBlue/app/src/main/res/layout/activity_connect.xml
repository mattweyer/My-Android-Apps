<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    tools:ignore="TextFields,HardcodedText"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Not Connected:" />

    <TextView
        android:text="No data"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:id="@+id/dataText"
        android:gravity="center"
        android:textSize="34sp" />

    <Button
        android:id="@+id/find"
        android:layout_width="match_parent"
        android:text=" Find Paired Devices"
        android:onClick="findDevice"
        android:layout_height="75dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:text="Connect Device"
        android:onClick="connectDevice"
        android:layout_marginTop="20dp"
        android:layout_height="75dp"
        android:textSize="18sp" />

    <Button
        android:text="Listen For Data"
        android:layout_width="match_parent"
        android:id="@+id/showButton"
        android:onClick="listenForData"
        android:layout_marginTop="20dp"
        android:layout_height="75dp"
        android:textSize="18sp" />

    <Button
        android:text="Close Connection"
        android:layout_width="match_parent"
        android:id="@+id/closeButton"
        android:onClick="closeConnection"
        android:layout_marginTop="20dp"
        android:layout_height="75dp"
        android:textSize="18sp" />

</LinearLayout>